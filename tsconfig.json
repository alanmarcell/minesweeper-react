{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "esnext",
    "sourceMap": true,
    "listFiles": false,
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
